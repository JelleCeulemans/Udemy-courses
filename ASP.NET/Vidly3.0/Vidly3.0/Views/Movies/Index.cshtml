@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>




<h1>Customers</h1>

@if (@Model != null)
{
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Movies</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in @Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>We don't have any movies yet.</p>
}